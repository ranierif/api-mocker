{
  "name": "ranierif/api-mocker",
  "description": "A simple package to mock API responses for testing",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "api",
    "mock",
    "testing",
    "php"
  ],
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": "^8.2",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "mockery/mockery": "^1.6",
    "symfony/var-dumper": "^6.3",
    "phpstan/phpstan": "^1.10",
    "friendsofphp/php-cs-fixer": "^3.40"
  },
  "autoload": {
    "psr-4": {
      "Ranierif\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test:coverage": "vendor/bin/phpunit --coverage-html reports --coverage-clover reports/coverage-clover.xml",
    "cs": "vendor/bin/php-cs-fixer check",
    "cs:fix": "vendor/bin/php-cs-fixer fix",
    "phpstan:analyse": "vendor/bin/phpstan analyse"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "bin": ["bin/make-api-mocker"]
}
