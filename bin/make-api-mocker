#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

if ($argc !== 2) {
    echo "Usage: php make-api-mocker <provider-name>\n";
    echo "Example: php make-api-mocker Stripe\n";
    exit(1);
}

try {
    $command = new \Ranierif\Commands\MakeApiMockerCommand();
    $command->execute($argv[1]);
} catch (\Exception $e) {
    echo "Error: " . $e->getMessage() . "\n";
    exit(1);
}
